<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGoCancelAndException"
            style="@style/HorizontalBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 协程 取消和异常" />

        <Button
            android:id="@+id/btnGoJetpackCoroutine"
            style="@style/HorizontalBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 协程与架构组件一起使用" />

        <Button
            android:id="@+id/btnGoKotlinCoroutineWithRetrofit"
            style="@style/HorizontalBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 协程与Retrofit一起使用" />

        <Button
            android:id="@+id/btnGoKotlinFlow"
            style="@style/HorizontalBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin Flow" />

    </LinearLayout>

</ScrollView>