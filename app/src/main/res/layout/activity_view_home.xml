<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ViewHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGoFps"
            style="@style/HorizontalBtnStyle"
            android:text="FPS" />

        <Button
            android:id="@+id/btnGoScreenAdapt"
            style="@style/HorizontalBtnStyle"
            android:text="屏幕适配" />

        <Button
            android:id="@+id/btnGoRequestLayout"
            style="@style/HorizontalBtnStyle"
            android:text="requestLayout" />

        <Button
            android:id="@+id/btnGoViewAnimation"
            style="@style/HorizontalBtnStyle"
            android:text="View动画" />

        <Button
            style="@style/HorizontalBtnStyle"
            android:text="属性动画" />

    </LinearLayout>

</ScrollView>