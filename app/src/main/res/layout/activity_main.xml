<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGoSmali"
            style="@style/HorizontalBtnStyle"
            android:text="Smali" />

        <Button
            android:id="@+id/btnGoOpenSource"
            style="@style/HorizontalBtnStyle"
            android:text="开源库" />

        <Button
            android:id="@+id/btnGoIpc"
            style="@style/HorizontalBtnStyle"
            android:text="IPC" />

        <Button
            android:id="@+id/btnGoScroll"
            style="@style/HorizontalBtnStyle"
            android:text="滑动" />

        <Button
            android:id="@+id/btnGoImageHome"
            style="@style/HorizontalBtnStyle"
            android:text="图片" />

        <Button
            android:id="@+id/btnGoViewHome"
            style="@style/HorizontalBtnStyle"
            android:text="View" />

        <Button
            android:id="@+id/btnGoPerformanceHome"
            style="@style/HorizontalBtnStyle"
            android:text="性能优化" />

    </LinearLayout>

</ScrollView>