<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnConnect"
            style="@style/HorizontalBtnStyle"
            android:text="连接Service" />

        <Button
            android:id="@+id/btnGetPerson"
            style="@style/HorizontalBtnStyle"
            android:text="getPerson" />

        <Button
            android:id="@+id/btnAddPerson"
            style="@style/HorizontalBtnStyle"
            android:text="addPerson" />

        <Button
            android:id="@+id/btnAddPersonIn"
            style="@style/HorizontalBtnStyle"
            android:text="addPersonIn" />

        <Button
            android:id="@+id/btnAddPersonOut"
            style="@style/HorizontalBtnStyle"
            android:text="addPersonOut" />

        <Button
            android:id="@+id/btnAddPersonInout"
            style="@style/HorizontalBtnStyle"
            android:text="addPersonInout" />

        <Button
            android:id="@+id/btnAddPersonOneway"
            style="@style/HorizontalBtnStyle"
            android:text="addPersonOneway" />

        <Button
            android:id="@+id/btnRegisterListener"
            style="@style/HorizontalBtnStyle"
            android:text="registerListener" />

    </LinearLayout>

</ScrollView>